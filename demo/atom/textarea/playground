const withState = BaseComponent => {
  return class BaseComponentWithState extends React.Component {
    state = {value: this.props.value || ''}

    onChange = e => {
      const value = e.target.value
      this.setState({value})
    }

    render() {
      const {value} = this.state
      const {onChange, props} = this
      return (
        <div>
          <BaseComponent {...props} value={value} onChange={onChange} />
        </div>
      )
    }
  }
}

const stylesSection = {
  border: '1px solid #CCC',
  background: '#fff',
  marginTop: '10px',
  padding: '10px'
}

const AtomTextareaWithState = withState(AtomTextarea)

return (
  <div>
    <h1>AtomTextarea</h1>
    <h2>Basic Usage</h2>
    <p>
      <code>short</code> <em>size</em> by default
    </p>
    <div style={stylesSection}>
      <AtomTextareaWithState value="Saul Bass on failure: Failure is built into creativity"/>
    </div>
    
    <h2>Long size</h2>
    <div style={stylesSection}>
      <AtomTextareaWithState
        value="Saul Bass on failure: Failure is built into creativity"
        size="long"
      />
    </div>
    <h2>Disabled</h2>
    <div style={stylesSection}>
      <AtomTextareaWithState
        value="Saul Bass on failure: Failure is built into creativity"
        disabled
      />
    </div>
    <h2> Placeholder</h2>
    <div style={stylesSection}>
      <AtomTextareaWithState placeholder="Write something cool here..." />
    </div>  
      
    
  </div>
)
